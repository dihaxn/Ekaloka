## Backend Environment Example
# Copy this file to .env and replace placeholder values.
# DO NOT commit the real .env file.

# Server
PORT=4000

# Database
MONGO_URI=mongodb://localhost:27017/ekaloka

# Session / Auth secrets (use long random strings in real envs)
SESSION_SECRET=replace_with_long_random_session_secret
JWT_SECRET=replace_with_long_random_jwt_secret

# OAuth Providers
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=YOUR_FACEBOOK_APP_SECRET

# Payments
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY

# Other optional config can go here
