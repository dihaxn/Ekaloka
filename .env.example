# ========================================
# EKALOKA E-COMMERCE ENVIRONMENT CONFIG
# ========================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Option 1: Direct PostgreSQL Connection
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Option 2: Supabase (Alternative to DATABASE_URL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ========================================
# AUTHENTICATION & SECURITY
# ========================================

# JWT Configuration (Required for custom auth)
JWT_ACCESS_SECRET=your_secure_access_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_secure_refresh_secret_key_here_min_32_chars

# Clerk Authentication (Alternative to JWT)
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# ========================================
# EXTERNAL SERVICES
# ========================================

# MongoDB (if using MongoDB)
MONGODB_URI=mongodb://username:password@host:port/database

# Inngest (Background Jobs)
INNGEST_SIGNING_KEY=your_inngest_signing_key
INNGEST_EVENT_KEY=your_inngest_event_key

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ========================================
# APPLICATION SETTINGS
# ========================================

# Environment
NODE_ENV=development

# Currency Display
NEXT_PUBLIC_CURRENCY=$

# ========================================
# DEVELOPMENT & TESTING
# ========================================

# Test Database (for running tests)
TEST_DATABASE_URL=postgresql://username:password@host:5432/test_database_name

# ========================================
# SECURITY NOTES
# ========================================
# - Never commit .env file to version control
# - Use strong, unique secrets for JWT keys
# - Rotate secrets regularly in production
# - Use environment-specific .env files (.env.local, .env.production)
